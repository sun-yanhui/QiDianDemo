<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_report_time"
                style="@style/BaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:textColor="@color/grey_text_dark"
                tools:text="上报时间" />


            <TextView
                android:id="@+id/tv_report_describe"
                style="@style/BaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:textColor="@color/grey_text_dark"
                tools:text="案件描述" />



            <RelativeLayout
                android:id="@+id/iv_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/iv_play_gif"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:src="@drawable/speaker"
                    android:visibility="gone" />

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_play_no_gif"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:src="@drawable/voice_layout" />
            </RelativeLayout>
            <View
                android:visibility="invisible"
                android:id="@+id/view_line1"
                style="@style/BaseDivider"
                android:layout_marginTop="@dimen/spacing_small" />

            <TextView
                android:id="@+id/tv_report_category"
                style="@style/BaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:textColor="@color/grey_text_dark"
                tools:text="案件类别" />

            <View
                android:visibility="invisible"
                android:id="@+id/view_line2"
                style="@style/BaseDivider"
                android:layout_marginTop="@dimen/spacing_small" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal">

                <LinearLayout
                    android:id="@+id/ll_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>